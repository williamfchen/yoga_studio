<h1>Add Yogi to <%= @studio.name%></h1>
<form action="/studios/<%= @studio.id %>/yogis" method="post">
  <input type="hidden" name="authenticity_token" value="<% form_authenticity_token %>">
    <label for="name">Name:</label>
    <input type="text" id="name" name="yogi[name]" required><br><br>
    
    <label for="age">Age:</label>
    <input type="number" id="age" name="yogi[age]" min="1" max="120" required><br><br>
    
    <label for="member">Member?</label>
    <input type="hidden" name="yogi[member]" value="false">
    <input type="checkbox" id="member" name="yogi[member]" value="true"><br><br>
    
    <button type="submit">Add Yogi</button>
</form>